<!DOCTYPE html>
<html lang="en">
  <head><%- include('partials/head') %></head>
  <body>
    <%- include('partials/nav') %>
    <main class="container">
      <h2>Boards</h2>

      <input
        id="boardFilter"
        placeholder="Filter boards..."
        class="create"
        style="margin:10px 0;padding:8px 10px;border-radius:8px;border:1px solid #334155;background:#0a0f1e;color:#e5e7eb;"
      />

      <div class="grid">
        <% boards.forEach(b => { %>
          <article class="card">
            <h3><a href="/boards/<%= b.id %>"><%= b.name %></a></h3>
            <p class="muted"><%= b.description %></p>
          </article>
        <% }) %>
      </div>
    </main>

    <!-- Filter behavior -->
    <script src="/boards-filter.js" defer></script>
  </body>
</html>